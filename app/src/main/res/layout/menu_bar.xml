<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rg_menu"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/main_footer_bg"
    android:orientation="horizontal">

    <!-- android:paddingLeft="0dp"加这个是为了让内容能够剧中 -->
    <RadioButton
        android:id="@+id/rb_assignment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bar_selector"
        android:button="@null"
        android:drawableTop="@drawable/ic_home_black_18dp"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:text="ChinaTown" />

    <RadioButton
        android:id="@+id/rb_complete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bar_selector"
        android:button="@null"
        android:drawableTop="@drawable/ic_visibility_black_18dp"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:text="Discover" />

    <RadioButton
        android:id="@+id/rb_addsubmission"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bar_selector"
        android:button="@null"
        android:gravity="center"
        android:drawableTop="@drawable/ic_add_circle_outline_black_24dp"
        android:paddingTop="3dp"

         />

    <RadioButton
        android:id="@+id/rb_submission"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bar_selector"
        android:button="@null"
        android:drawableTop="@drawable/ic_room_black_18dp"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:text="Map" />

    <RadioButton
        android:id="@+id/rb_person"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bar_selector"
        android:button="@null"
        android:drawableTop="@drawable/ic_shopping_basket_black_18dp"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:text="Mail" />
</RadioGroup>